@model IQueryable<Speaker>
@{
    ViewData["Title"] = "Speakers";
    var i = 0;
}
<h2>@ViewData["Title"]</h2>

<div>
@foreach (var speaker in Model)
{
        <div style="float:left;width:100px;height:100px;">
                <div style="text-align:center">
                    <a href="@Url.Content(string.Format("~/speakers/details/{0}",@speaker.ID))">
                        <img style="max-width:50px" src="@(string.IsNullOrEmpty(speaker.AvatarURL)?"/images/default_user_icon.jpg":speaker.AvatarURL)" alt="@speaker.FullName" />
                    </a>
                </div>
                <div style="text-align:center">
                    <h5>
                        <a href="@Url.Content(string.Format("~/speakers/details/{0}",@speaker.ID))">@speaker.AppUser.FirstName @speaker.AppUser.LastName</a>
                    </h5>
                </div>
                <div style="clear:both"></div>
            </div>
    i++;
}
</div>
<div style="clear:both"></div>