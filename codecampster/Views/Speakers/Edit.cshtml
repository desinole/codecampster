@model Codecamp2018.ViewModels.Speaker.SpeakerViewModel
@{
    ViewData["Title"] = "Edit " + Model.FullName + "'s Speaker Profile";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Speakers" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Company" class="col-md-2 control-label"></label>
        <div class="col-md-10 input-group">
            <input asp-for="Company" class="form-control" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10 input-group">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <abbr title="Please provide your phone number">?</abbr>
        <div class="col-md-10 input-group">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Bio" class="col-md-2 control-label"></label>
        <abbr title="Provide a brief biography">?</abbr>
        <div class="col-md-10 input-group">
            <textarea asp-for="Bio" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AvatarURL" class="col-md-2 control-label"></label>
        <div class="col-md-10 input-group">
            <input asp-for="AvatarURL" class="form-control" />
            <span asp-validation-for="AvatarURL" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"></label>
        <div class="col-md-10 input-group">
            <img style="max-width:50px" src="@(string.IsNullOrEmpty(Model.AvatarURL)?"/images/default_user_icon.jpg":Model.AvatarURL)" alt="Profile Photo" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Twitter" class="col-md-2 control-label"></label>
        <abbr title="Provide your Twitter handle, without the @@ sign">?</abbr>
        <div class="col-md-10 input-group">
            <div class="input-group-addon">@@</div>
            <input asp-for="Twitter" class="form-control" />
            <span asp-validation-for="Twitter" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LinkedIn" class="col-md-2 control-label"></label>
        <abbr title="Provide your LinkedIn handle">?</abbr>
        <div class="col-md-10 input-group">
            <input asp-for="LinkedIn" class="form-control" />
            <span asp-validation-for="LinkedIn" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Website" class="col-md-2 control-label"></label>
        <abbr title="Provide the full URL for your website, including http[s]://">?</abbr>
        <div class="col-md-10 input-group">
            <input asp-for="Website" class="form-control" />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Blog" class="col-md-2 control-label"></label>
        <abbr title="Provide the full URL for your blog, including http[s]://">?</abbr>
        <div class="col-md-10 input-group">
            <input asp-for="Blog" class="form-control" />
            <span asp-validation-for="Blog" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IsMvp" class="col-md-2 control-label"></label>
        <abbr title="If you are a Microsoft MVP check here">?</abbr>
        <div class="col-md-10 input-group">
            <input asp-for="IsMvp" type="checkbox" class="form-check" />
            <span asp-validation-for="IsMvp" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MVPDetails" class="col-md-2 control-label"></label>
        <abbr title="If you're the recepient of Microsoft MVP or other community awards, provide details">?</abbr>
        <div class="col-md-10 input-group">
            <textarea asp-for="MVPDetails" class="form-control" rows="3"></textarea>
            <span asp-validation-for="MVPDetails" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AuthorDetails" class="col-md-2 control-label"></label>
        <abbr title="If you're an author/co-author/contributor for a book or course, provide details">?</abbr>
        <div class="col-md-10 input-group">
            <textarea asp-for="AuthorDetails" class="form-control" rows="3"></textarea>
            <span asp-validation-for="AuthorDetails" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NoteToOrganizers" class="col-md-2 control-label"></label>
        <abbr title="Visible only to organizers. Use this section to leave any information to organizers. If you submit multiple sessions - rank them in order of preference. Let us know if you prefer to speak earlier or later in the day, back to back or further apart. We will do our best to accomodate your request, but because of logistics we cannot guarantee anything">?</abbr>
        <div class="col-md-10 input-group">
            <textarea asp-for="NoteToOrganizers" class="form-control" rows="3"></textarea>
            <span asp-validation-for="NoteToOrganizers" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Home" asp-action="Index"><span class="btn btn-default">Cancel</span></a><br /><br />
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
