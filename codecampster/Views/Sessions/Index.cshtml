@model IEnumerable<Codecamp2018.Models.Session>


<h2>@ViewData["Title"]</h2>
<style>
    .sessionLinks:hover {
        background-color: #337ab7;
        color: #eee;
        text-decoration: none;
        padding: 4px;
    }
    .sessionLinks {
        color: #337ab7;
        white-space: nowrap;
        padding: 4px;
    }
</style>
